@{
    ViewBag.Title = "Calculate Your Final Grade";
}

@model GradeCalculatorModel
<body>
    <h2>Grade Calculator</h2>
    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" asp-for="assignments" />
        <br />
        <label>Group Project: </label>
        <input id="group-project" asp-for="group_project" />
        <br />
        <label>Quizzes:</label>
        <input id="quizzes" asp-for="quizzes" />
        <br />
        <label>Exams: </label>
        <input id="exams" asp-for="exams" />
        <br />
        <label>INTEX:</label>
        <input id="intex" asp-for="intex" />
        <br /><br />
        <!--button that calls js function-->
        <input type="submit" value="Calculate Grade" id="submitButton" onclick="calculate_grade()" />
        <div asp-validation-summary="All"></div>
    </form>
</body>
